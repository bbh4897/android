<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@mipmap/konum_bg_10"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/hedefKonum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Hedef Konum Adını Giriniz.."
        android:inputType="textPersonName" />

</LinearLayout>
    <ListView
        android:id="@+id/listViewWifi"
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_weight="0.97" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginLeft="-5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_wifiscan"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_tema"
            android:text="Yenile"
            android:textColor="@android:color/background_light" />


        <Button
            android:id="@+id/btn_wifilevel"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_tema2"
            android:text="Kaydet"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btn_wifilevelListe"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_tema_4"
            android:text="Listele"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btn_bitir"
            android:layout_width="71dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_tema_3"
            android:text="Bitir"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

</LinearLayout>